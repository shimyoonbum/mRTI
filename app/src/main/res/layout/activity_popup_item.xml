<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/popup_item_no"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/close_style"
            android:id="@+id/layout_close">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_close"
                android:layout_centerInParent="true"
                android:layout_marginEnd="25dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/popup_item_no"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.05"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edit_item_no"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.4"
            android:background="@drawable/bg_input"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.05"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/popup_item_desc"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.05"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edit_item_desc"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.4"
            android:background="@drawable/bg_input"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.05"
            android:textSize="20sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"
            android:textSize="15sp"
            android:textColor="#fff"
            android:text="@string/popup_btn_find"
            android:textAllCaps="false"
            android:background="@drawable/button_style"
            android:id="@+id/btn_find_item_desc"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="13dp"
            android:stretchColumns="*">
            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/popup_layout"
                    android:gravity="center"
                    android:text="@string/popup_org_code"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="3"
                    android:background="@drawable/popup_layout"
                    android:gravity="center"
                    android:text="@string/popup_item_no"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="5"
                    android:background="@drawable/popup_layout"
                    android:gravity="center"
                    android:text="@string/popup_item_desc"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow>
                <ListView
                    android:id="@+id/list_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:listitem="@layout/item_popup_item"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>